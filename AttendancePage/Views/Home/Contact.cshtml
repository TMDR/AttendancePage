<html>
<head>
</head>
<body>
    <style>
        table {
            font-family: "Courier New", Courier, monospace;
            border: 4px solid #555555;
            background-color: #555454;
            text-align: center;
            border-collapse: collapse;
        }

            table td, table th {
                border: 1px solid #555555;
                padding: 5px 10px;
            }

            table tbody td {
                font-size: 12px;
                font-weight: bold;
                color: #FFFFFF;
            }

            table td:nth-child(even) {
                background: #398AA4;
            }

            table thead {
                background: #398AA4;
                border-bottom: 10px solid #398AA4;
            }

                table thead th {
                    font-size: 15px;
                    font-weight: bold;
                    color: #FFFFFF;
                    text-align: center;
                    border-left: 2px solid #398AA4;
                }

                    table thead th:first-child {
                        border-left: none;
                    }

            table tfoot td {
                font-size: 13px;
            }

            table tfoot .links {
                text-align: right;
            }

                table tfoot .links a {
                    display: inline-block;
                    background: #FFFFFF;
                    color: #398AA4;
                    padding: 2px 8px;
                    border-radius: 5px;
                }


        body, dialog {
            font-family: 'Open Sans', sans-serif;
            margin: 0 auto 0 auto;
            width: 100%;
            text-align: center;
            margin: 20px 0px 20px 0px;
            background-color: #398AA4;
        }

        p {
            background: #555555;
            border: 10px solid #555555;
            font-size: 15px;
            font-weight: bold;
            color: #FFFFFF;
            border-left: 2px solid #398AA4;
            text-align: left;
            width: 40px;
        }

        h1 {
            font-size: 1.5em;
            color: #525252;
        }

        .box {
            background: white;
            width: 300px;
            border-radius: 6px;
            margin: 0 auto 0 auto;
            padding: 0px 0px 70px 0px;
            border: #2980b9 4px solid;
        }

        .email {
            background: #ecf0f1;
            border: #ccc 1px solid;
            border-bottom: #ccc 2px solid;
            padding: 8px;
            width: 250px;
            color: #AAAAAA;
            margin-top: 10px;
            font-size: 1em;
            border-radius: 4px;
        }

        .passsword {
            background: #ecf0f1;
            border: #ccc 1px solid;
            border-bottom: #ccc 2px solid;
            padding: 8px;
            width: 250px;
            color: #AAAAAA;
            margin-top: 10px;
            font-size: 1em;
            border-radius: 4px;
        }


        .password {
            border-radius: 4px;
            background: #ecf0f1;
            border: #ccc 1px solid;
            padding: 8px;
            width: 250px;
            font-size: 1em;
        }

        .btn {
            background: #2ecc71;
            width: 125px;
            padding-top: 5px;
            padding-bottom: 5px;
            color: white;
            border-radius: 4px;
            border: #27ae60 1px solid;
            font-weight: 800;
            font-size: 0.8em;
        }

            .btn:hover {
                background: #2CC06B;
            }

        #btn2 {
            float: left;
            background: #3498db;
            width: 125px;
            padding-top: 5px;
            padding-bottom: 5px;
            color: white;
            border-radius: 4px;
            border: #2980b9 1px solid;
            margin-top: 20px;
            margin-bottom: 20px;
            margin-left: 10px;
            font-weight: 800;
            font-size: 0.8em;
        }

            #btn2:hover {
                background: #3594D2;
            }

        #dialog {
            position: absolute;
            z-index: 1;
            top: 0px;
            left: 65%;
            border: none;
        }

        #frameC {
            position: absolute;
            z-index: 1;
            top: 25%;
            left: 55%;
            border: none;
        }

        iframe {
            height: 500px;
            top: 0px;
            border: none;
        }

        ::-webkit-scrollbar {
            width: 20px;
        }

        ::-webkit-scrollbar-track {
            box-shadow: inset 0 0 5px grey;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background-color: transparent;
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background-color: #555454;
            }

        ::-webkit-scrollbar-corner {
            background-color: transparent;
        }
    </style>
    @{
        Layout = null;

    }
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script type="text/javascript">
    function logOut() {
        window.location.href = '@Url.Action("Index","Home")';
        }
        function DoIt() {
            var input = document.getElementById("DoIt");
            var date = input.value;
            document.getElementById(date).scrollIntoView();
        }
    </script>
    <h3></h3>
    <input type="month" onchange="DoIt()" value=@Html.Name(AttendancePage.Controllers.HomeController.LocalDate) class="btn" id="DoIt" />
    <input type="button" value="LogOut" class="btn" onclick="logOut()" />
    <div style="width:100%">
        <ul>
            @foreach (int year in AttendancePage.Controllers.HomeController.seeYear)
            {
                <li>
                    <p>@Html.Name(year.ToString())</p><ul>
                        @foreach (int month in AttendancePage.Controllers.HomeController.seeMonth)
                        {
                            <li id="@Html.Name(year.ToString())-@Html.Name(month.ToString())">
                                <p>@Html.Name(month.ToString())</p> <h5>
    duration :
    @foreach (AttendancePage.Models.workerPerMonth workerPerMonth in AttendancePage.Controllers.HomeController.workerPerMonths)
    {
        @if (workerPerMonth.month == month && workerPerMonth.year == year)
        {
            @Html.Name(workerPerMonth.duration.ToString())
        }
    } H
    Salary Per Month :
    @foreach (AttendancePage.Models.workerPerMonth workerPerMonth in AttendancePage.Controllers.HomeController.workerPerMonths)
    {
        @if (workerPerMonth.month == month && workerPerMonth.year == year)
        {
            @Html.Name((workerPerMonth.duration * AttendancePage.Controllers.HomeController.rate).ToString())
        }
    }SR
</h5>
                                @foreach (int day in AttendancePage.Controllers.HomeController.seeDay)
                                {@if (AttendancePage.Controllers.HomeController.seeTime.Where(e => e.Date.Value.Year.Equals(year) && e.Date.Value.Month.Equals(month) && e.Date.Value.Day.Equals(day)).Any())
                                    {<ul>
                                            <li>
                                                <table width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>&nbsp;&nbsp;TimeIn&nbsp;</th>
                                                            <th>&nbsp;&nbsp;TimeOut</th>
                                                            <th>&nbsp;&nbsp;&nbsp;Duration</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (AttendancePage.Models.DateTime11 dateTime in AttendancePage.Controllers.HomeController.seeTime.Where(e => e.Date.Value.Year.Equals(year) && e.Date.Value.Month.Equals(month) && e.Date.Value.Day.Equals(day)).OrderBy(e => e.TimeIn))
                                                        {
                                                            <tr>
                                                                <td>&nbsp;&nbsp;&nbsp;@Html.Name(dateTime.TimeIn.ToString())</td>
                                                                @if (dateTime.TimeOut.HasValue)
                                                                {
                                                                    <td>&nbsp;&nbsp;&nbsp;@Html.Name(dateTime.TimeOut.ToString())</td>
                                                                    <td>&nbsp;&nbsp;&nbsp;@Html.Name(dateTime.TimeOut.Value.Subtract(dateTime.TimeIn.Value).ToString())</td>
                                                                }
                                                                @if (!dateTime.TimeOut.HasValue)
                                                                {
                                                                    <td>&nbsp;&nbsp;&nbsp;[NotSet]</td>
                                                                    <td>&nbsp;&nbsp;&nbsp;[NotSet]</td>
                                                                }
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table><p>Day @Html.Name(day.ToString())</p>
                                            </li>
                                        </ul>}
                            }
                            </li>}
                    </ul>
                </li>}
        </ul>
    </div>
</body>
</html>